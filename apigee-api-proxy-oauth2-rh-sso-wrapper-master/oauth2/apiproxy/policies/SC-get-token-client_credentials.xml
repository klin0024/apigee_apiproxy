<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout async="false" continueOnError="true" enabled="true" name="SC-get-token-client_credentials">
    <DisplayName>SC-get-token-client_credentials</DisplayName>
    <Properties/>
    <Request clearPayload="true" variable="myRequest">
        <Set>
            <Verb>POST</Verb>
            <FormParams>
                <FormParam name="grant_type">{grant_type}</FormParam>
                <FormParam name="client_id">{client_id}</FormParam>
                <FormParam name="client_secret">{client_secret}</FormParam>
                <FormParam name="grant_type">client_credentials</FormParam>
                <FormParam name="scope">{scope}</FormParam>
            </FormParams>
            <Path>{idpTokenEndpoint}</Path>
        </Set>
        <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
    </Request>
    <Response>calloutResponse</Response>
    <HTTPTargetConnection>
        <Properties/>
        <URL>https://{idpHost}</URL>
    </HTTPTargetConnection>
</ServiceCallout>